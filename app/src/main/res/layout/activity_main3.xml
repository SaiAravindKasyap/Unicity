<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.applemacbookpro.unicity.Main3Activity"
  android:background="@drawable/loginaa">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwrd"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="textPassword"
        android:hint="password"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="34dp"
        android:background="@drawable/boundary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id No /Emp No"
        android:inputType="text"

        android:background="@drawable/boundary"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:id="@+id/id"
       android:padding="10dp"
        android:textSize="34dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/passwrd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="onclicklogo"
        android:id="@+id/button2"
        android:layout_marginTop="80dp"
        android:background="@drawable/button"
        android:elevation="4dp"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textColor="#fff"
        android:layout_alignTop="@+id/passwrd"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
